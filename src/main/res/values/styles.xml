<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!--   color for the app bar in the 'recent apps' view-->
        <item name="android:colorPrimary">@color/action_bar_color</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/status_bar_color</item>
        <item name="android:textSize">20dp</item>
        <item name="android:actionBarTheme">@style/AppTheme.ActionBar</item>
    </style>

    <style name="AppTheme.ActionBar" parent="android:Theme.Material">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/action_bar_color</item>
    </style>

    <style name="BudgetSetup">
        <item name="android:background">#ececea</item>
        <item name="android:elevation">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="ExpenseListItem">
        <item name="android:background">#ececea</item>
        <item name="android:elevation">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="DailyBudgetView">
        <item name="android:background">@color/daily_budget_color</item>
        <item name="android:padding">15dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TestAppTheme" parent="android:Theme.Holo.Light.NoActionBar">
    </style>
</resources>
